/**
 * General page styles
 *
 * @author Viacheslav Lotsmanov
 */

general-header-n1()
	custom-font('Proxima Nova Rg', bold)

general-header-n2()
	custom-font('Proxima Nova Lt', normal)

.general-cards
	@import 'general/cards'
.portfolio
	@import 'general/portfolio'
.team
	@import 'general/team'
.reviews
	@import 'general/reviews'
.contacts
	@import 'general/contacts'

general-page-section()
	html.general-page &
		display none
	html.general-page body.loaded &
		display block

footer,
.portfolio,
.team,
.reviews
.contacts
	general-page-section()
