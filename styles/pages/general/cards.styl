/**
 * General page cards styles
 *
 * @author Viacheslav Lotsmanov
 */

&
	size 100%
	min-height $min-height
	z-index 0
	position relative

@import 'header-mixins'

.card
	size 100%
	min-height $min-height
	overflow hidden
	z-index 0
	absolute left 0 top 0

	.bg
		size 100%
		absolute left 0 top 0
		z-index 0

.card.card-n0
	$bg-from-color = #315d9a
	$bg-to-color = #2b75ba
	$next-button-color = #10476e
	$speed = ($animation-speed * 4)

	background linear-gradient(top, $bg-from-color, $bg-to-color)
	text-align center
	position relative
	z-index 1

	.bg
		size 200%
		absolute top -50% left -50%
		bg($general-page-card-n0-bg, center center repeat)
		background-attachment fixed
		transform scale(0.7)
		opacity 0

	.content
		display block
		z-index 1
		color white
		text-align center
		relative top 50%
		transform translateY(-40%)

		h1
			general-header-n1()
			text-align center
			margin-bottom -99px
			box-sizing border-box
			padding-x 40px

			>span
				display block

		h2
			general-header-n2()
			text-align center
			margin-bottom -126px

		h1, h2, .next
			opacity 0
			transition opacity ($animation-speed*2) $animation-curve,
				margin-bottom ($animation-speed*2) $animation-curve

		.next
			display inline-block
			position relative
			background $next-button-color
			transition background-color $animation-speed $animation-curve

			&:hover
				background $round-button-hover-color

			> span
				pseudo-block()
				absolute top 50% left 50%
				margin-top 3px
				transform scale(1)

				&:before
					pseudo-block()
					icon($icons.arrow)
					absolute top 0 left 0
					transform translate(-50%, -50%)

		// see for some `body.loaded` selector styles in `general.styl`

.card-n1
	// ...

.controls
	absolute left 0 top 0
	size 100%

	ul.cards-switcher
		display none

	svg.cards-switcher
		display block
		background white
		absolute left 50% bottom 0
		transform translateX(-50%)
		z-index 1
